<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

    <extension point="org.eclipse.ui.commands">
        <category name="MultiCursor"
                id="com.asparck.multicursor.commands.category">
        </category>
        <command categoryId="com.asparck.multicursor.commands.category"
                id="com.asparck.multicursor.commands.editIdentical"
                name="Edit Identical Lines">
        </command>
    </extension>

    <extension point="org.eclipse.ui.handlers">
        <handler commandId="com.asparck.multicursor.commands.editIdentical"
                class="com.asparck.eclipse.multicursor.handlers.EditIdenticalHandler">
        </handler>
    </extension>

    <extension point="org.eclipse.ui.bindings">
        <key commandId="com.asparck.multicursor.commands.editIdentical"
                contextId="org.eclipse.ui.contexts.window"
                sequence="M1+M2+I"
                schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
        </key>
   </extension>

</plugin>
